generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model apontamento {
  id String @id @default(uuid())
  id_usuario String
  id_categoria String
  id_cliente String
  id_item_projeto_categoria String 
  data DateTime @default(now())
  horas String
  descricao String
  projeto String
  extra String
  data_de_exclusao DateTime
  status_extra String
  resposta_extra String
  observacao String
  garantia Boolean
}
